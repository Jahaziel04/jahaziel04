/////// LANDING-PAGE //////
///////////////////////////

.section
	&-one
		display: block;
		padding: 1em 0;
		background-repeat: no-repeat
		background-size: 62px
		background-position: right top
		background-image: url(../img/logo-pendant.png)
		@media only screen and (min-width:1025px)
			background-image: url(../img/landing-desk.png)
			background-size: 567px
			background-position right -21px
			@media only screen and (min-width:1300px)
				background-image: url(../img/landing-desk-big.png), url(../img/icon-pendant.png)
				background-size: 596px, 47px
				background-position right -7px, center -3px
			
	&-two
		display: block
		background-image: url(../img/graph-decoration.png)
		background-repeat no-repeat
		background-position 100% bottom
		background-size: 100%
		padding 20px 0
	
	&-three
		display block
		background-image: url(../img/graph-decoration-up.png)
		background-repeat no-repeat
		background-position left bottom
		background-size: 12%
		padding 20px 0


.perfil
	&-uno
		padding-bottom 1px
		display flex
		justify-content flex-end
		flex-direction column
		@media only screen and (min-width:720px)
			flex-direction row
	&-space
		margin 4px 8% 8px 0
		background-color #fcfcfc
		color #404040
		padding .2em 1em
		border-radius 0 5px 5px 0
		@media only screen and (min-width:721px)
			position absolute
			top 29%
			left 0
			max-width 368px
			@media only screen and (min-width:1025px)
				top 22%
				left 7%
				border-radius 5px
				@media only screen and (min-width:1160px)
					top 20%
					padding 2em 2em
			
	&-titulo
		font-size: 22px
		margin 16px 0
		@media only screen and (min-width:1024px)
			margin 0
		
	&-info
		margin 40px 10px 0 0
	&-img
		width 100%
		max-width 730px
		@media only screen and (min-width:1160px)
			max-width 1000px
		
	&-logo
		width 50px
		height 50px
		margin 5px auto 0 auto
		display none
		@media only screen and (min-width:1024px)
			display block

