/////// LANDING-PAGE //////
///////////////////////////

.section
	&-one
		display: block;
		padding: 1em 0;
		background-repeat: no-repeat
		background-size: 62px
		background-position: right top
		background-image: url(../img/logo-pendant.png)
		@media only screen and (min-width:1025px)
			background-image: url(../img/landing-desk.png)
			background-size: 567px
			background-position right -21px
			@media only screen and (min-width:1300px)
				background-image: url(../img/landing-desk-big.png), url(../img/icon-pendant.png)
				background-size: 596px, 47px
				background-position right -7px, center -3px


	&-two
		display: block
		background-image: url(../img/graph-decoration.png)
		background-repeat no-repeat
		background-position 100% bottom
		background-size: 100%
		padding 20px 0

	&-three
		display block
		background-image: url(../img/graph-decoration-up.png)
		background-repeat no-repeat
		background-position left bottom
		background-size: 12%
		padding 20px 0

///////    PERFIL    //////
///////////////////////////
.perfil
	&-uno
		padding-bottom 1px
		display flex
		justify-content flex-end
		flex-direction column
		@media only screen and (min-width:721px)
			flex-direction row
	&-space
		margin 4px 8% 8px 0
		background-color #fcfcfc
		color #404040
		padding .2em 1em
		border-radius 0 5px 5px 0
		@media only screen and (min-width:721px)
			position absolute
			top 29%
			left 0
			max-width 368px
			@media only screen and (min-width:1025px)
				top 22%
				left 7%
				border-radius 5px
				@media only screen and (min-width:1160px)
					top 20%
					padding 2em 2em
	&-tres
		background-color #fcfcfc

	&-titulo
		font-size: 22px
		margin 16px 0
		@media only screen and (min-width:1024px)
			margin 0
	&-subtitulo
		font-size 30px
		font-weight 400
		display inline-block


	&-info
		margin 40px 10px 0 0
	&-img
		width 100%
		max-width 730px
		@media only screen and (min-width:721px)
			margin-bottom -5px
			@media only screen and (min-width:1160px)
				max-width 1000px

	&-logo
		width 50px
		height 50px
		margin 5px auto 0 auto
		display none
		@media only screen and (min-width:1024px)
			display block

///////     GUIA     //////
///////////////////////////

.azul-marino
	color #082e41
.azul-alt
	color #28a9f4



.flex
	display flex
	height 60px
	flex-direction column
	justify-content center
.block
	display block


.fila
	background-color #f2f2f2
	margin .5em 0
	&-gris
		background-color #f5f5f5
		margin .5em 0
	&:nth-child(odd)
		background-color red

.guia
	&-dos
		background-image: url(../img/one-page.png)
		background-repeat no-repeat
		background-position 195px bottom
		background-size: 266px
		background-color: #f5f5f5
		@media only screen and (min-width:520px)
			background-position 100% bottom
			background-size: 266px

			@media only screen and (min-width:720px)
				background-position 100% 100px
				@media only screen and (min-width:800px)
					background-position 103% 9px
					background-size: 350px
					@media only screen and (min-width:1200px)
						background-position 93% 9px

	&-tres
		display: block;
		padding: 1em 0;
		background-repeat: no-repeat
		@media only screen and (min-width:720px)
			background-size: 47px
			background-position: 90% top
			background-image: url(../img/icon-pendant.png)
			@media only screen and (min-width:1025px)
				background-image: url(../img/montain.png), url(../img/icon-pendant.png)
				background-size: 596px, 47px
				background-position right 29px, 64% 0px
				@media only screen and (min-width:1300px)
					background-image: url(../img/montain.png), url(../img/icon-pendant.png)
					background-size: 596px, 47px
					background-position right 29px, 64% 0px



	&-subtitulo
		&,
		&-x
			font-size: 30px;
			font-weight: 300;
			color: #404040;
			font-family: Roboto;
			&:after
				content: ""
				font-size 30px
				width: 93%
				height: 3px
				background-color: #00a9e0
				display: block
				margin: 5px auto 0 auto

		&-x
			&:after
				content: ""
				font-size 30px
				width: 93%
				height: 3px
				background-color: #32c1ed
				display: block
				margin: 5px auto 0 auto
	&-head
		&,
		&--trans,
		&--azul,
		&--azul2,
		&--simple,
		&--azulX,
		&--azul2X
			//background-color #f2f2f2
			display flex
			height 60px
			min-height 90px
			align-items center
			text-align center
			justify-content center
			margin 1em 0

		&--trans
				background-color transparent
		&--azul
			background-color #03a9fa
			color white !important
			border-radius 12px 12px 0 0
			min-height 60px
		&--azul2
			background-color #32c1ed
			color white
			border-radius 12px 12px 0 0
			min-height 60px
		&--simple
			align-items left
			text-align left
			justify-content flex-end
		&--azulX
			background-color #03a9fa
			color white !important
			border-radius 0 0 12px 12px
			min-height: 45px
		&--azul2X
			background-color #32c1ed
			color white
			border-radius 0 0 12px 12px
			min-height: 45px
	&-text
		padding 0 1em 0 !important
		text-align right

	&-flex
		display inline-flex
		align-items: center;
		justify-content: center;
		margin-right: 16px
		.icon-stack
			font-size 30px
			color: white
		.icon-looks_1
			font-size 29px
			color: white



