/////// TITULOS Y TEXTOS ////////


h1
	font-size: 30px
	font-weight: 300
	margin-bottom 14px
	@media only screen and (min-width:1025px)
		font-size 48px
h2
	font-size: 22px
	font-weight 300
	@media only screen and (min-width:720px)
		font-size: 28px
		@media only screen and (min-width:1024px)
			font-size: 40px

.h2
	font-size: 20px
	font-weight: 500


.text-normal
	font-size 16px !important
	font-weight 400


.t2
	font-size 20px
	font-weight 300
	margin 15px 0 0 0
	@media only screen and (min-width:1025px)
		font-size: 40px
.st2
	font-size 16px
	font-weight 400
	color: gris


//Seccion 1 subtitulo 3
.s3s1
	font-size: 14px
	font-weight: 300
	color #525252
	@media only screen and (min-width:1025px)
		font-size: 22px

.s3s2
	font-size: 14px
	font-weight: 500
	color gris


///////     GUIA     //////
///////////////////////////
.azul-marino
	color #082e41
.azul-alt
	color #28a9f4
.gris
	color #404040
.guia
	&-titulo
		font-size 30px
		font-weight 400
		@media only screen and (max-width:720px)
			font-size 20px
.lista
	font-style: normal;
	font-weight: 500;
	font-size: 16px
	&:hover
		color: azul
		text-decoration: underline;

	&-head
		&,
		&--trans
			//background-color #f2f2f2
			display flex
			height 60px
			align-items center
			text-align center
			justify-content center

		&--trans
				background-color transparent
	&-text
		padding-left 1.5em
.fila
	background-color #f2f2f2
	padding 1em
	&:nth-child(odd)
		background-color #f5f5f5








