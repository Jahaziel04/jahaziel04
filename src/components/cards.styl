


//////COMPONENTES DE UNA CARTA

.jcard
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14),0 1px 5px 0 rgba(0,0,0,0.12),0 3px 1px -2px rgba(0,0,0,0.2)
  padding: 16px 0 16px 16px
  background-color: #fefefe
  &-title
    font-size 24px
    font-weight: 400;
    color: #404040;
  &-title-x
    font-size 36px
    font-weight: 400
    color: 666666
    display inline-flex
    @media only screen and (min-width:325px)
      font-size: 40px

  &-icon
    margin: 0 20px
    align-items center
    text-align: center;
    i
      color white
      font-size: 38px!important
  &-prices
    color #999999
  &-price
    font-size: 40px
    color rosa
    border-bottom: 1px solid rgba(153, 153, 153, 0.48)
    text-align: center;
    &--small
      font-size: 14px
      color: #404040
      margin-left: 10px

  &-denomination
    font-size: 12px
    color #404040
    margin-left: 16px
.table-size
  width 50%
  min-width: 250px
  &-x
    width 100%
    min-width: 250px
.features
  display flex
  flex-direction: column;

  &-content
    display block
    width 100%
    border-bottom: 1px solid rgba(153, 153, 153, 0.48)
    //line-height: .5
    .t
      color: #999999


  .x
    border-bottom: none


  &-item
    display: flex;
    flex-direction: row;
    align-items: center;
