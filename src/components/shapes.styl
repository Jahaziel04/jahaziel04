.guia
	&-titulo
		font-size 34px
	&-subtitulo
		font-size 16px
	&-head
		&,
		&--trans,
		&--azul,
		&--azul2
			//background-color #f2f2f2
			display flex
			height 60px
			min-height 90px
			align-items center
			text-align center
			justify-content center
			margin 1em 0
			
		&--trans
				background-color transparent
		&--azul
			background-color #28a9f4
			color white
			border-radius 5px 5px 0 0
		&--azul2
			background-color #00a9e0
			color white
			border-radius 5px 5px 0 0
	&-text
		padding 0 1em 0 !important
.fila
	//border-bottom 1px solid #28a9f4
	background-color #f2f2f2
	margin .5em 0
	&:nth-child(odd)
		background-color #f5f5f5
///FIX
.flex
	display flex
	height 60px
	flex-direction column
	justify-content center
.block
	display block
///Etiquetes
.tag
	&,
	&-azul,
	&-azul2,
	&-rosa
		display inline-block
		height 22px
		box-sizing content-box
		height 22px
		position relative
		content ""
		margin 0 13px 0 0
		padding 10px 28px 10px 20px
		border none
		border-radius 4px 1px 1px 4px
		color white
		text-align center
		text-overflow ellipsis
		background-color: gris
		&::before
			display inline-block
			box-sizing content-box
			z-index: 1
			width 30px
			height: 30px
			position: absolute
			content ""
			top 6px
			right -16px
			border none
			border-radius 1px 1px 4px
			color white
			background-color: #28a9f4
			-webkit-transform: rotateY(1deg) rotateZ(-45deg)
			transform rotateY(1deg) rotateZ(-45deg)
		&::after
			display inline-block
			box-sizing content-box
			z-index: 2
			width 12px
			height 12px
			position absolute
			content ""
			top 16px
			right 0
			border none
			border-radius 10px
			color red
			text-overflow clip
			background-color white
			text-shadow none
	
	&-azul
		color white
		background-color azul
	&-azul2
		color white
		background-color blue
	&-rosa
		color white
		background-color #28a9f4

.circle
	&,
	&--small,
	&--medium,
	&--icon,
	&--avatar,
	&--flag,
	&--absolute,
	&--center-logo
		align-items center
		justify-content center
		overflow hidden
		border-radius 50%
	&--small
		display inline-block
		width  50px
		height 50px
		box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
	
	&--medium
		width 100px
		height 100px
		display block
		box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
	
	&--icon
		display inline-block
		height 45px
		width 45px
		
	&--avatar
		width 50px
		height 50px
		box-shadow 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
		margin 0 12px
		
	&--flag
		display flex
		width 42px
		height 42px
		background-color azul
		margin-right	 5px
		&-in
			display flex
			width 29px
			height 29px
			background-color white
			border-radius 50%
			align-items center
			justify-content center
			span
				color azul
				


	&--absolute
		position absolute
		width: 60px
		height 60px
		right 12px
		top 11px

	&--center-logo
		position absolute
		width 30px
		height 30px
		right 0
		left 0
		top 43%
		margin 0 auto
.square
	height 50px
	width 50px
