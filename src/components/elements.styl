
.tag
  &,
  &-azul,
  &-azul2,
  &-rosa
    display inline-block
    height 22px
    box-sizing content-box
    height 22px
    position relative
    content ""
    margin 0 13px 0 0
    padding 10px 28px 10px 20px
    border none
    border-radius 4px 1px 1px 4px
    color white
    text-align center
    text-overflow ellipsis
    background-color: gris
    &::before
      display inline-block
      box-sizing content-box
      z-index: 1
      width 30px
      height: 30px
      position: absolute
      content ""
      top 6px
      right -16px
      border none
      border-radius 1px 1px 4px
      color white
      background-color: gris
      -webkit-transform: rotateY(1deg) rotateZ(-45deg)
      transform rotateY(1deg) rotateZ(-45deg)
    &::after
      display inline-block
      box-sizing content-box
      z-index: 2
      width 12px
      height 12px
      position absolute
      content ""
      top 16px
      right 0
      border none
      border-radius 10px
      color red
      text-overflow clip
      background-color white
      text-shadow none
    
  &-azul
    color white
    background-color azul
  
  &-azul2
    color white
    background-color blue
    
  &-roza
    color white
    background-color rosa
    

/*-----------------------------*\
           $AVATARES
           
        Combierte el contenedor en un
        circulo que contiene una imagen
\*------------------------------*/
  
.circle
	
	&, 
	&--small, 
	&--medium,
	&--icon,
	&--avatar
		align-items center
		justify-content center
		overflow hidden
		border-radius 50%
	&--small
		display block
		width 50px
		height 50px
		box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);
		
	&--medium
		width 100px
		height 100px
		display block
		box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);
		
		
	&--icon
		display flex
		height 45px
		width 45px
		background-color $principal
		color white
		font-size: 28px
		margin -13px 0 0 auto

	&--avatar
		width 50px
		height 50px
		box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12)
		margin: 0 12px
.square
	height: 50px
	width: 50px